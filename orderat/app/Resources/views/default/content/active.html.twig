{% extends 'default/index.html.twig' %}

{% block content_title %}Active Orders, Now! ({{ forders.getTotalItemCount }} Orders){% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
  .loader {
    border: 16px solid #f3f3f3; /* Light grey */
    border-top: 16px solid #3498db; /* Blue */
    border-bottom: 16px solid #3498db;
    border-radius: 50%;
    width: 120px;
    height: 120px;
    animation: spin 2s linear infinite;
    display: none;
    margin:0px auto;
    position:absolute;
    left: 50%;
  }

  .col-centered{
    float: none;
    margin: 0 auto;
  }

  @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
  }
  </style>
{% endblock %}

{% block content %}

<!-- <div class="row" style="text-align: center;"> -->
    <div id="loader" class="loader "></div>
<!-- </div> -->


<div id="orders">
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
     <script src="https://code.jquery.com/jquery-3.2.0.min.js"></script>
     <script>
     var filterObject = {};
       {% for  key,value in params %}
          filterObject["{{key}}"] = "{{value}}";
       {% endfor %}

      function getAjaxUrlFilter(){
        var url = '';
        for (var prop in filterObject) {
          url += 'filter[' + prop + ']' + '=' + filterObject[prop] + '&';
        }
        return url;
      }

     function getOrders(page){
        $("#loader").fadeIn(333);
        urlAjax = `/ajax/orders/{{ section }}?page=${page}&` + getAjaxUrlFilter();
         $.ajax({url: urlAjax, success: function(result){
             $("#orders").html(result);
             $("#loader").fadeOut(333);
         }});
     }

     getOrders(1);
     </script>

{% endblock %}
