{% if paginator.getLastPage() > 1 %}
<nav aria-label=\"Page navigation\">
  <ul class=\"pagination\">
    {% if paginator.hasPrevious() %}
      <li><a href=\"#\" onclick=\"getOrders( {{ 1 }} )\">&lt;&lt;</a></li>
      <li><a href=\"#\" onclick=\"getOrders( {{ paginator.getPrevious() }} )\">&lt;</a></li>
    {% endif %}

    {% for i in 1..paginator.getLastPage() %}
      {% if i == paginator.getCurrentPage() %}
        <li class=\"active\"><a href=\"#\" onclick=\"getOrders( {{ i }} )\">{{ i }}</a></li>
      {% else %}
        <li><a href=\"#\" onclick=\"getOrders( {{ i }} )\">{{ i }}</a></li>
      {% endif %}
    {% endfor %}

    {% if paginator.hasNext() %}
      <li><a href=\"#\" onclick=\"getOrders( {{ paginator.getNext() }} )\">&gt;</a></li>
      <li><a href=\"#\" onclick=\"getOrders( {{ paginator.getLastPage() }} )\">&gt;&gt;</a></li>
    {% endif %}
  </ul>
</nav>
{% endif %}
